<h5 class="text-sm text-muted mb-2 mt-3">MX Records</h5>
<table class="table-base">
  <thead>
    <tr>
      <th class="text-left">Name</th>
      <th class="text-left">IP</th>
    </tr>
  </thead>
  <tbody>
    <% records.each do |rec| %>
      <tr>
        <td class="table-cell"><%= rec[:name] %></td>
        <td class="table-cell"><%= rec[:ip] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if local_assigns[:note].present? %>
  <p class="text-sm text-muted mt-3"><%= note %></p>
<% end %>
