<% grouped.each do |category, tasks| %>
  <div class="methodology-group">
    <h4 class="methodology-category">
      <%= category %>
    </h4>
    <div class="methodology-tasks">
      <% tasks.each do |task| %>
        <% is_critical = critical_tasks.include?(task[:task]) %>
        <div class="methodology-task">
          <div class="task-name <%= is_critical ? 'task-critical' : '' %>">
            <%= task[:task] %> <%= "(CRITICAL)" if is_critical %>
          </div>
          <div class="task-status">Status: <%= task[:status] %></div>
          <div class="task-description"><%= task[:description] %></div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
