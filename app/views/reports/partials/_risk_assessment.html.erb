<div class="page-break">
  <% risks = @report_data[:risk_assessment] || {} %>
  <% high_risks = risks[:high_risks] || [] %>
  <% medium_risks = risks[:medium_risks] || [] %>
  <% info_risks = risks[:info_risks] || [] %>

  <% if high_risks.any? || medium_risks.any? || info_risks.any? %>
    <div class="report-section">
      <h3 class="heading-md text-center">Risk Assessment</h3>

      <p class="text-base mb-4">
        The following risks were identified during the reconnaissance phase. They are categorized by severity and may require immediate remediation or strategic consideration.
      </p>

      <%= render 'reports/partials/risk_section', title: 'High Risks', risks: high_risks, style_class: 'text-critical' if high_risks.any? %>
      <%= render 'reports/partials/risk_section', title: 'Medium Risks', risks: medium_risks, style_class: 'text-medium' if medium_risks.any? %>
      <%= render 'reports/partials/risk_section', title: 'Informational', risks: info_risks, style_class: 'text-low' if info_risks.any? %>
    </div>
  <% end %>
</div>
