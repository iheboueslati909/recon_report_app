<div class="mb-4">
  <h4 class="text-blue text-base font-bold mb-2"><%= asset[:ip] %></h4>
  
  <div class="asset-meta mb-3">
    <span><strong>Domain:</strong> <%= asset[:domain].presence || "N/A" %></span>
    <span class="meta-separator">|</span>
    <span><strong>ISP:</strong> <%= asset[:isp].presence || "N/A" %></span>
    <span class="meta-separator">|</span>
    <span><strong>Risk:</strong> <span class="<%= risk_level_class(asset[:risk_level]) %>"><%= asset[:risk_level] %></span></span>
  </div>

  <% if asset[:open_ports].present? %>
    <%= render 'reports/partials/asset_ports', ports: asset[:open_ports] %>
  <% end %>

  <% if asset[:vulnerabilities].present? %>
    <div class="mt-3">
      <%= render 'reports/partials/asset_vulnerabilities', vulnerabilities: asset[:vulnerabilities] %>
    </div>
  <% end %>

  <% if asset[:recommendation].present? %>
    <div class="mt-3">
    <h4 class="heading-sm mb-3">Recommended Mitigation</h4>
      <p class="text-base"><%= asset[:recommendation] %></p>
    </div>
  <% end %>
</div>
