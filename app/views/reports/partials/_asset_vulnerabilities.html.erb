<div>
  <h5 class="heading-tertiary mt-6">Top Vulnerabilities</h5>
  <% vulnerabilities.first(5).each do |vuln| %>
    <div class="vuln-item mb-4">
      <div class="text-regular font-bold text-blue mb-1">
        <%= vuln[:title] %>
      </div>
      <div class="text-small <%= vuln_severity_class(vuln[:severity]) %>">
        <%= vuln[:severity] %> severity â€” CVSS: <%= vuln[:cvss] %>
      </div>
      <div class="text-regular mt-1">
        <%= vuln[:description] %>
      </div>
    </div>
  <% end %>

  <% if vulnerabilities.size > 5 %>
    <p class="text-small text-muted"><em>Only the first 5 vulnerabilities are shown. See dashboard for more.</em></p>
  <% end %>
</div>
