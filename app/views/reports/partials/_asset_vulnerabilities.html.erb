  <% vulnerabilities.first(5).each do |vuln| %>
    <div class="mb-3">
      <div class="vuln-title mb-1"><%= vuln[:title] %></div>
      <div class="vuln-severity"><%= vuln[:severity] %> severity â€” CVSS: <%= vuln[:cvss] %></div>
